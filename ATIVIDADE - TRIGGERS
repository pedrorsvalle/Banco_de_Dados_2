Delimiter $$
Drop trigger if exists TriggerC $$
Create  Trigger TriggerControleTrocaDepartamento
 After update on departamento
 
 for each row begin
 insert into  ControleTrocaDepartamento
		(idControleTrocaDepartamento,DepartamentoAntigo,empregado_idEmpregado,DepartementoNovo,dataTroca)
Values (old.idControleTrocaDepartamento,old.DepartamentoAntigo,old.empregado_idEmpregado,old.DepartementoNovo ,now());
 
 end $$
 Delimiter ;



























